{
  "name": "owl",
  "version": "0.0.1",
  "description": "A full-stack TypeScript web app starter template",
  "author": "Paolo Dapul <paolodapultech@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev --parallel",
    "check-types": "turbo run check-types",
    "format": "turbo run format",
    "deploy": "turbo run deploy",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-owl": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "turbo": "^1.3.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
